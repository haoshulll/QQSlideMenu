<?xml version="1.0" encoding="utf-8"?>
<com.example.haoshul.qqslidemenu.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/MyLineerLayout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#18B4de">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_head"
            android:background="@drawable/head"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_listview">
    </ListView>
</com.example.haoshul.qqslidemenu.MyLinearLayout>